<%# app/views/lists/index.html.erb %>
<div class="container mt-4">
  <h1>My Watch Lists</h1>

  <%= link_to "Create new list", new_list_path, class: "btn btn-primary mb-4" %>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <p class="card-text">
              <%= pluralize(list.movies.count, 'movie') %>
            </p>
            <%= link_to "View list", list_path(list), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
